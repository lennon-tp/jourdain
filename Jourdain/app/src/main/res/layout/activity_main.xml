<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="0dp">

        <!-- ===== HEADER IMAGE ===== -->
        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/header_image1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="0dp"
            android:contentDescription="Header" />

        <!-- ===== HEADER TEXT ===== -->
        <TextView
            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenue sur l'application officielle de la paroisse de Jourdain"
            android:textAlignment="center"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="32dp" />


        <!-- ===== CANTIQUE & LIVRET CÔTE À CÔTE ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <!-- Cantique (colonne) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btnCantique"
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    android:src="@drawable/cantique_cover"
                    android:scaleType="fitCenter"
                    android:contentDescription="Cantique" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantique"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Livret (colonne) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btnLivret"
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    android:src="@drawable/livret_cover"
                    android:scaleType="fitCenter"
                    android:contentDescription="Livret" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Livret"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>


        <!-- ===== BOUTON AUDIO ===== -->
        <Button
            android:id="@+id/btnAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accéder aux pistes audio"
            android:textColor="@color/white"
            android:backgroundTint="#1877F2"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_marginBottom="60dp" />


        <!-- ===== FOOTER ===== -->
        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2025 Paroisse de Jourdain"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- ===== FACEBOOK ===== -->
        <TextView
            android:id="@+id/facebookLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suivez-nous sur Facebook"
            android:textColor="#1877F2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:layout_marginBottom="32dp"
            android:onClick="openFacebook" />

    </LinearLayout>

</ScrollView>
