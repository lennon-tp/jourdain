<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    ```
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Cantique -->
        <ImageView
            android:id="@+id/btnCantique"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:src="@drawable/cantique_cover"
            android:scaleType="fitCenter"
            android:contentDescription="Cantique" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantique"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Livret -->
        <ImageView
            android:id="@+id/btnLivret"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:src="@drawable/livret_cover"
            android:scaleType="fitCenter"
            android:contentDescription="Livret" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Livret"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp" />

        <!-- Bouton Audio -->
        <Button
            android:id="@+id/btnAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audio"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

    </LinearLayout>
    ```

</ScrollView>
