<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.home.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Cantique Block -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btnCantique"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:src="@drawable/cantique_cover"
                android:scaleType="fitCenter"
                android:contentDescription="Cantique" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantique"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Livret Block -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btnLivret"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:src="@drawable/livret_cover"
                android:scaleType="fitCenter"
                android:contentDescription="Livret" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Livret"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Audio Button -->
        <Button
            android:id="@+id/btnAudio"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Audio"
            android:textSize="18sp"
            android:backgroundTint="@color/purple_500"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>
